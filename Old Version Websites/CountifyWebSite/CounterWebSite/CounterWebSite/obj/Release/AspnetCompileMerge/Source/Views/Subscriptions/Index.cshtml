@model IEnumerable<CounterWebSite.Models.SubscriptionDetails>

@{
    ViewBag.Title = "Subscriptions";
}

<h2>@ViewBag.Title</h2>

<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.SubscriptionType)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @if (item.hasAccount)
                {
                    @Html.ActionLink(item.UserName, "Details", "Users", routeValues: new { id = item.UserId }, htmlAttributes: null)
                }
                else
                {
                    @:--
                }
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SubscriptionType, new { Title = item.SubscriptionTypeDescription })
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>
