@{
    ViewBag.Title = "Home";
}

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/bundles/superslides")
    @Scripts.Render("~/bundles/blockUI")
    @Scripts.Render("~/bundles/nprogress")
    @Scripts.Render("~/bundles/home/index")
}
@section styles {
    @Styles.Render("~/Content/superslide")
    @Styles.Render("~/Content/nprogress")
    @Styles.Render("~/Content/home/index")
}

@section Preheader {
    <div id="main-img" class="wide-container">
        <div id="slides">
            <div class="slides-container">
                <img src="@Url.Content("~/Images/home-1.jpg")" />
                <img src="@Url.Content("~/Images/home-2.jpg")" />
                <img src="@Url.Content("~/Images/home-3.jpg")" />
                <img src="@Url.Content("~/Images/home-4.jpg")" />
            </div>
            @*
                <nav class="slides-navigation">
                    <a href="#" class="next">Next</a>
                    <a href="#" class="prev">Previous</a>
                </nav>
            *@
        </div>
    </div>
}

@section Nav {
    <nav>
        <ul id="menu">
            @if (WebSecurity.IsAuthenticated)
            {
                <li>@Html.ActionLink(HomeStrings.menu_controlPanel, "Index", "Stats")</li>
            }
            
            //  Login button is commented until new login page is implemented
            @*else  
            {
                <li>@Html.ActionLink(HomeStrings.menu_login, "Login", "Account")</li>
            }*@
            <li><a href='#' class='deneyimi'>@HomeStrings.menu_experience</a></li>
            <li><a href='#' class='nasil'>@HomeStrings.menu_howWorks</a></li>
            <li><a href='#' class='siparis'>@HomeStrings.menu_order</a></li>
            <li class="language">@Html.Partial("_LanguagePartial")</li>
        </ul>
    </nav>
}

<div class="content">
    <h2 id="deneyimi">@HomeStrings.experienceTitle</h2>
    <hr />
    <div class="video-container">
        <div>
            <iframe src="//player.vimeo.com/video/92917630" width="500" height="375" frameborder="0" webkitallowfullscreen mozallowfullscreen allowfullscreen></iframe>
        </div>
    </div>

    <div class="info">
        <section class="section-1">
            <div><img src="@Url.Content("~/Images/cafe.png")" /></div>
            <span>@HomeStrings.cafeString</span>
        </section>

        <section class="section-2">
            <span>@HomeStrings.customerString</span>
            <div><img src="@Url.Content("~/Images/cocuk.png")" /></div>
        </section>

        <section class="section-3">
            <div><img src="@Url.Content("~/Images/conter.png")" /></div>
            <span>@HomeStrings.counterString</span>
        </section>

        <section class="section-4">
            <span>@HomeStrings.graphString</span>
            <div><img src="@Url.Content("~/Images/grafic.png")" /></div>
        </section>
    </div>

    <h2 id="nasil">@HomeStrings.howWorks</h2>
    <hr />
    <div class="how-works">
        <div class="col side">
            <div>
                <img src="@Url.Content("~/Images/icon1.png")" />
            </div>
            <h4>@HomeStrings.businessTitle1<br />@HomeStrings.businessTitle2</h4>
            <hr />
            <p>@HomeStrings.businessString</p>
        </div>
        <div class="col middle">
            <div>
                <img src="@Url.Content("~/Images/icon2.png")" />
                <h2>@HomeStrings.outlet1<br />@HomeStrings.outlet2</h2>
            </div>
        </div>
        <div class="col side">
            <div>
                <img src="@Url.Content("~/Images/icon3.png")" />
            </div>
            <h4>@HomeStrings.wifiTitle1<br />@HomeStrings.wifiTitle2</h4>
            <hr />
            <p>@HomeStrings.wifiString</p>
        </div>
    </div>

    <h2>@HomeStrings.dimensions</h2>
    <hr />

    <img class="measurements" src="@Url.Content("~/Images/olcu.png")" />

    <div id="order-container">
        <hr />
        <button>@HomeStrings.order</button>
        <div id="order-form-container">
            @{ Html.RenderAction("New", "Orders"); }
        </div>
        <hr />
    </div>

    <div id="subscribe-container">
        <div id="subscribe-form-container">
            @{ Html.RenderAction("Notify", "Subscriptions"); }
        </div>
    </div>

</div>
