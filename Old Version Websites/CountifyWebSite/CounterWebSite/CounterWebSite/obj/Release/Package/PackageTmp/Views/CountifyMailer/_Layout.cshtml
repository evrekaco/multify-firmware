@model CounterWebSite.Models.EmailModel
@using Mvc.Mailer

<html>
<head>
    <meta charset="utf-8" />
    <title>@Model.Subject</title>
</head>
<body>
    <div class="content-wrapper main-content">
        @*TODO: make this image inline using LinkedResource *@
        <img class="site-logo" src="@Url.Abs("Images/countify_logo.png")">
        @RenderBody()
    </div>
    <style>
        /* layout */
        .content-wrapper {
            margin: 0 auto;
            width: 80%;
        }

        .site-logo {
            display: block;
            margin: 10px auto;
            width: 30%;
        }

        /* details */
        .display-label {
            margin-top: 15px;
            font-weight: bold;
        }

        .display-field {
        }

        fieldset {
            border: none;
        }

        hgroup.title {
            margin-bottom: 10px;
        }

            hgroup.title h1, hgroup.title h2 {
                display: inline;
            }

            hgroup.title h2 {
                font-weight: normal;
                margin-left: 3px;
            }

        label {
            display: block;
            font-size: 1.2em;
            font-weight: 600;
        }
    </style>
</body>
</html>